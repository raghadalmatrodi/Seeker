    android:shape="rectangle" >

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="1dp"
                android:color="#77818181" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="10dp"
                android:left="-1dp"
                android:right="10dp"
                android:top="-1dp" />

            <corners android:radius="10dp" />
        </shape>
    </item>

