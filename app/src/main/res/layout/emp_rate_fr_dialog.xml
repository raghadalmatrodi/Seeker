<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relativeLayout"

            android:paddingBottom="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/dd"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>


            <ScrollView
                android:id="@+id/tt"
                android:layout_below="@id/dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rp"
                        android:paddingTop="20dp"
                        android:background="#fff"
                        android:orientation="vertical"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/take_time"
                            android:text="@string/please_take_a_moment_to_rate_the_freelancer"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            app:layout_constraintTop_toTopOf="@id/rp"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/q_one"
                            android:text="QUESTION 1"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@id/take_time"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>


                        <RatingBar
                            android:id="@+id/rb_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:layout_constraintTop_toBottomOf="@id/q_one"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:numStars="5"
                            android:scaleX=".7"
                            android:scaleY=".7"
                            android:stepSize="1"
                            android:theme="@style/RatingBar"
                            />


                        <TextView
                            android:id="@+id/q_two"
                            android:text="QUESTION 2"
                            android:gravity="center"

                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@id/rb_one"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RatingBar
                            android:id="@+id/rb_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:numStars="5"
                            android:gravity="center"

                            app:layout_constraintTop_toBottomOf="@id/q_two"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:scaleX=".7"
                            android:scaleY=".7"
                            android:stepSize="1"
                            android:theme="@style/RatingBar"
                            />

                        <TextView
                            android:id="@+id/q_three"
                            android:text="QUESTION 3"
                            android:gravity="center"

                            app:layout_constraintTop_toBottomOf="@id/rb_two"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RatingBar
                            android:id="@+id/rb_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:layout_constraintTop_toBottomOf="@id/q_three"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:numStars="5"
                            android:scaleX=".7"
                            android:scaleY=".7"
                            android:gravity="center"

                            android:stepSize="1"
                            android:theme="@style/RatingBar"
                            />

                        <TextView
                            android:id="@+id/q_four"
                            android:text="QUESTION 4"
                            android:gravity="center"

                            app:layout_constraintTop_toBottomOf="@id/rb_three"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RatingBar
                            android:id="@+id/rb_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:layout_constraintTop_toBottomOf="@id/q_four"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:numStars="5"
                            android:scaleX=".7"
                            android:scaleY=".7"
                            android:gravity="center"

                            android:stepSize="1"
                            android:theme="@style/RatingBar"
                            />

                        <TextView
                            android:id="@+id/q_five"
                            android:text="QUESTION 5"
                            android:gravity="center"

                            app:layout_constraintTop_toBottomOf="@id/rb_four"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RatingBar
                            android:id="@+id/rb_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:layout_constraintTop_toBottomOf="@id/q_five"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:numStars="5"
                            android:scaleX=".7"
                            android:scaleY=".7"
                            android:gravity="center"

                            android:stepSize="1"
                            android:theme="@style/RatingBar"
                            />

                        <TextView
                            android:id="@+id/thx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toBottomOf="@id/rb_five"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:text="Thank You!\n Your opinion makes a difference."/>
                        <Button
                            android:id="@+id/emp_finish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="#149A8D"
                            app:layout_constraintTop_toBottomOf="@id/thx"
                            app:layout_constraintStart_toStartOf="@id/rp"
                            app:layout_constraintEnd_toEndOf="@id/rp"
                            android:text="Finish"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            tools:layout_editor_absoluteX="161dp"
                            tools:layout_editor_absoluteY="127dp" />



                        <!--        <TextView-->
                        <!--            android:id="@+id/fr_all_ratings_total_tv"-->
                        <!--            android:layout_width="match_parent"-->
                        <!--            android:layout_height="wrap_content"-->
                        <!--            android:layout_marginTop="50dp"-->
                        <!--            android:gravity="center"-->
                        <!--            android:text="all ratings" />-->
                        <!--        <RatingBar-->
                        <!--            android:id="@+id/fr_total_rbq"-->
                        <!--            android:layout_width="wrap_content"-->
                        <!--            android:layout_height="wrap_content"-->
                        <!--            android:layout_gravity="center_horizontal"-->
                        <!--            android:numStars="5"-->
                        <!--            android:stepSize="0.1"-->
                        <!--            android:layout_margin="20dp"-->
                        <!--            android:theme="@style/RatingBar"-->
                        <!--            />-->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>

            </ScrollView></RelativeLayout>



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/logo_icon"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>