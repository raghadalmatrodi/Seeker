<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreelancerMainPages.FreelancerPayment">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#48E0DDDD"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment_freelancer_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#198A7A"
            android:textStyle="bold"
            android:text="Payment"/>

    </LinearLayout>
    <TextView
        android:id="@+id/fullName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginTop="70dp"
        android:layout_marginStart="40dp"
        android:textSize="17sp"
        android:textColor="#000"
        android:gravity="center"
        android:text="Full Name:"

        />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginTop="7dp"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/fullName_text"
        app:layout_constraintTop_toBottomOf="@id/fullName_text"


        />

    <TextView
        android:id="@+id/iban_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fullName"
        app:layout_constraintTop_toBottomOf="@id/fullName"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textColor="#000"
        android:gravity="center"
        android:text="IBAN:"

        />

    <EditText
        android:id="@+id/iban"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginTop="7dp"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/iban_text"
        app:layout_constraintTop_toBottomOf="@id/iban_text"


        />

    <Button
        android:id="@+id/save"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/iban"
        app:layout_constraintTop_toBottomOf="@id/iban"
        android:layout_marginStart="40dp"
        android:text="Save"
        android:textColor="#FFF"
        android:background="@drawable/rounded_edges"
        android:layout_marginTop="100dp"
        android:textSize="17sp"



        />

</androidx.constraintlayout.widget.ConstraintLayout>