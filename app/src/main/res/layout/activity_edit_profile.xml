                app:layout_constraintEnd_toEndOf="@id/linkedin_link"
                android:background="@drawable/stroke_box"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@id/facebook"
                app:layout_constraintTop_toTopOf="@id/facebook"
