<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:background="#48E0DDDD"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:text="Project Type"
            android:textColor="#198A7A"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/online_project"
            android:layout_width="344dp"
            android:layout_height="101dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#48E9E6E6"
            android:background="@drawable/layout_borders"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/website" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Online Project"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_grey" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Or-"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginTop="50dp"
            android:textSize="22sp"/>

            <RelativeLayout
                android:id="@+id/onfield_project"

                android:background="@drawable/layout_borders"
                android:backgroundTint="#48E9E6E6"
                android:orientation="vertical"
                android:layout_width="344dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/meeting"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="On Field Project"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_arrow_grey" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>