<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D3B8BEBC"
    android:orientation="vertical"
    tools:context=".Activities.LoginActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
 <LinearLayout
     android:layout_marginTop="30dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
     <ImageView
         android:id="@+id/admin_logout_btn"
         android:layout_width="40dp"
         android:layout_height="50dp"
         android:src="@drawable/ic_exit_to_app_black_24dp"
         android:layout_gravity="left"
         android:layout_weight="1"
         android:layout_marginLeft="20dp"
         >
     </ImageView>
     <ImageView
         android:layout_width="200dp"
         android:layout_height="150dp"
         android:src="@drawable/logo_icon"
         android:layout_gravity="center"
         android:layout_weight="2"
         android:layout_marginLeft="50dp">


     </ImageView>

 </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Admin"
        android:textSize="25dp"
        android:textColor="#F37E18"
        android:gravity="center"
        android:layout_marginLeft="122dp"
        android:padding="10dp"
android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can manage the system by pressing the following buttons"
        android:textSize="17dp"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"    >

    </TextView>


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        android:padding="10dp">



<ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/user"
    android:layout_weight="1">

</ImageView>
        <Button
            android:id="@+id/users_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/rounded_edges"
            android:backgroundTint="#F37E18"
            android:text=" Users"
            android:textAllCaps="true"
            android:textColor="#fff"
android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:textSize="18sp"></Button>




    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        android:padding="10dp">



        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/projects_tab"
            android:layout_weight="1">

        </ImageView>
        <Button
            android:id="@+id/projects_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/rounded_edges"
            android:backgroundTint="#F37E18"

            android:text=" PROJECTS"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:textSize="18sp"></Button>




    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        android:padding="10dp">



        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/projects_tab"
            android:layout_weight="1">

        </ImageView>
        <Button
            android:id="@+id/bids_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/rounded_edges"
            android:backgroundTint="#F37E18"

            android:text=" BIDS"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:textSize="18sp"></Button>




    </LinearLayout>

</LinearLayout>

