<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"

        android:layout_marginLeft="20sp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/project_payment_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:textColor="#198A7A"
            android:textStyle="bold"
            android:text="Payment Type"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/fixed_price"
            android:layout_width="353dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"

            android:background="@drawable/layout_borders"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/money" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Fixed Price"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="183dp"
                android:layout_height="48dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="35dp"
                android:text="Recommended for projects that have finite deliverables." />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_grey" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"

            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginTop="50dp"
            android:textSize="22sp"/>

        <RelativeLayout
            android:id="@+id/hourly"

            android:background="@drawable/layout_borders"
            android:layout_width="353dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/clock"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Hourly"

                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />

            <TextView
                android:layout_width="183dp"
                android:layout_height="48dp"

                android:layout_marginLeft="90dp"
                android:layout_marginTop="35dp"
                android:text="Recommended for projects that are ongoing." />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_grey" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>